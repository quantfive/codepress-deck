import { jsx as _jsx } from "react/jsx-runtime";
import { createContext, useContext } from "react";
/**
 * Context that holds an HTMLElement to be used as the default portal container
 * for Radix UI popovers (and other portal-based primitives).
 */
export const PopoverContainerContext = createContext(null);
/**
 * Provides a DOM element to be used as the default `container` for
 * Radix `PopoverPrimitive.Portal`.
 */
export const PopoverContainerProvider = ({ container, children, }) => (_jsx(PopoverContainerContext.Provider, { value: container, children: children }));
/**
 * Hook to consume the current `popoverContainer`.
 */
export const usePopoverContainer = () => useContext(PopoverContainerContext);
