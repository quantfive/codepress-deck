import { jsx as _jsx, jsxs as _jsxs } from "react/jsx-runtime";
import { BRANCH_PREFIX } from "@/lib/deployment";
const BranchInput = ({ value, onChange, placeholder = "Enter branch name", showPrefix = false, className = "", id, onKeyDown, }) => {
    return (_jsxs("div", { className: "flex", children: [showPrefix && (_jsx("span", { className: "inline-flex items-center px-3 text-sm font-mono bg-gray-100 text-gray-700 border border-gray-300 border-r-0 rounded-l-md", children: BRANCH_PREFIX })), _jsx("input", { id: id, className: `w-full border border-gray-300 px-3 py-2 text-sm focus:outline-none ${showPrefix ? "rounded-r-md" : "rounded-md"} ${className}`, placeholder: placeholder, value: value, onChange: (e) => onChange(e.target.value), onKeyDown: onKeyDown })] }));
};
export default BranchInput;
