import { jsx as _jsx, jsxs as _jsxs } from "react/jsx-runtime";
import React from "react";
import { cn } from "../../lib/utils.js";
const ActionButton = React.forwardRef(({ icon: Icon, onClick, isActive = false, className = "", children, disabled = false, tooltip, }, ref) => {
    return (_jsxs("button", { ref: ref, className: cn("px-3 py-2 border-none rounded-md cursor-pointer flex items-center justify-center text-base font-bold transition-colors duration-200", isActive ? "bg-slate-200" : "bg-transparent hover:bg-slate-100", disabled && "cursor-not-allowed opacity-50", className), onClick: onClick, disabled: disabled, title: tooltip, children: [Icon && _jsx(Icon, { size: 16 }), children] }));
});
ActionButton.displayName = "ActionButton";
export default ActionButton;
